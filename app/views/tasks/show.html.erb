<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>
<p><%= link_to "Edit task", edit_task_path(@task) %></p>
<p><%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Delete task?"} %></p>
<p><%= link_to "Back to tasks", tasks_path %></p>
